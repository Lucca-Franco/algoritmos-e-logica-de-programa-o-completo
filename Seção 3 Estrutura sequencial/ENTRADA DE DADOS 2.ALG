Algoritmo "Entrada de dados 2"

Var

   idade : inteiro
   salario1, salario2 : real
   nome : caractere

Inicio

   escreva("Digite seu nome: ")
   leia(nome)
   escreva("Digite sua idade: ")
   leia(idade)
   escreval("Digite o quanto voce ganhou nos dois ultimos meses: ")
   leia(salario1)
   leia(salario2)
   
   escreval("DADOS DIGITADOS:")
   escreval("Nome = ", nome)
   escreval("Idade = ", idade)
   escreval("salario 1 = ", salario1:8:2)
   escreval("salario 2 = ", salario2:8:2)

Fimalgoritmo